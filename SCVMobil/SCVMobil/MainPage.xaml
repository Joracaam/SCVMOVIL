             Title="Inicio">  

    <ContentPage Title="Scanner">
        <StackLayout
          Padding="10"
          Spacing="0"
          AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
          AbsoluteLayout.LayoutFlags="All">

            <Label
            Text="Cedula"
            FontSize="20"
            
            TextColor="Black"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            Margin="0,0,0,0"/>
            <Frame
            CornerRadius="10"
            BorderColor="#2196F3"
            BackgroundColor="#2196F3"
            Padding="5">
                <Frame
              CornerRadius="10"
              BackgroundColor="White"
              Padding="1">
                    <Entry
                x:Name="entCedula"
                Completed="EntCedula_Completed"
                Keyboard="Keyboard.Numeric" MaxLength="11"/>
                </Frame>
            </Frame>
            <Label
            Text="Nombre:"
            FontSize="20"
            TextColor="Black"
            FontAttributes="Bold"
             x:Name="lblNombres"
            HorizontalTextAlignment="Center"
            Margin="0,20,0,0"/>
            <Label
             FontSize="20"
            TextColor="Blue"
            FontAttributes="Bold"
           
            HorizontalTextAlignment="Center"
            Margin="0,20,0,0"
            
            x:Name="entNombres"
            />
            <Label
            Text="Apellido:"
            FontSize="20"
            TextColor="Black"
            FontAttributes="Bold"
            x:Name="lblApellidos"
            HorizontalTextAlignment="Center"
            Margin="0,20,0,0"></Label>
            <Label
            FontSize="20"
            TextColor="Blue"
            FontAttributes="Bold"
           
            HorizontalTextAlignment="Center"
            Margin="0,20,0,20"
            
            x:Name="entApellidos"/>
            <Label 
                    
                    Text="Version:"
                    FontSize="Small"
                    HorizontalOptions="Center"
                    
                    VerticalOptions="End">

            </Label>
            <Label 
                    x:Name="lblVersion"
                    Text="0.0.0.0"
                    HorizontalOptions="Center"
                    FontSize="Small"                    
                    VerticalOptions="End">

            </Label>

        </StackLayout>
    </ContentPage>
    
